    "figcount=add_title(figcount,'El Ni\\u00F1o DJF composite anomalies - Temperature')\n",
    "\n",
    "\n",
    "plt.figure()\n",
    "djf_anomaly_nina=t2m_djf.sel(year=nina_yrs).mean('year')-t2m_djf.mean('year')\n",
